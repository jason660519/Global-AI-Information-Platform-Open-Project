{
  "name": "github-repos-platform",
  "version": "1.0.0",
  "description": "GitHub 倉庫信息平台 - 本地 PostgreSQL 開發版本",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:all": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "crawl": "node src/crawlers/index.js",
    "crawl:github": "node src/crawlers/sources/github-crawler.js",
    "crawl:actions": "node src/index.js",
    "clean:data": "node scripts/data-cleaner.js",
    "import:data": "node scripts/data-importer.js",
    "backup:db": "node scripts/backup.js",
    "setup:db": "node database/setup.js",
    "migrate:db": "cd backend && npx knex migrate:latest",
    "seed:db": "cd backend && npx knex seed:run",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:actions": "node test-github-actions.js",
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check src/**/*.js",
    "export:csv": "node src/exporters/csv-exporter.js",
    "upload:supabase": "node src/uploaders/supabase-uploader.js",
    "diagnose": "node diagnose-github-actions.cjs",
    "clean:exports": "rimraf exports/*.csv",
    "clean:logs": "rimraf logs/*.log",
    "clean:all": "npm run clean:exports && npm run clean:logs",
    "validate:env": "node -e \"console.log('Environment validation:', process.env.GITHUB_TOKEN ? '✅ GITHUB_TOKEN' : '❌ GITHUB_TOKEN missing', process.env.DATABASE_URL ? '✅ DATABASE_URL' : '❌ DATABASE_URL missing')\"",
    "ci": "npm run lint && npm run format:check && npm run test",
    "prestart": "npm run validate:env",
    "poststart": "echo \"Crawler execution completed. Check exports/ directory for CSV files.\""
  },
  "keywords": [
    "ai",
    "information",
    "platform",
    "crawler",
    "data-analysis",
    "supabase",
    "github-api"
  ],
  "author": "Global AI Info Platform Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "axios": "^1.6.7",
    "cheerio": "^1.1.2",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "joi": "^17.12.0",
    "lodash": "^4.17.21",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "pg": "^8.11.3",
    "knex": "^3.1.0",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "concurrently": "^8.2.2"
  }
}